# focus
alt - h : yabai -m window --focus west  || yabai -m display --focus west
alt - n : yabai -m window --focus south || yabai -m display --focus south
alt - e : yabai -m window --focus north || yabai -m display --focus north
alt - i : yabai -m window --focus east  || yabai -m display --focus east

# move in spaces
shift + alt - h : yabai -m window --swap west && sketchybar --trigger windows_on_spaces
shift + alt - n : yabai -m window --swap south && sketchybar --trigger windows_on_spaces
shift + alt - e : yabai -m window --swap north && sketchybar --trigger windows_on_spaces
shift + alt - i : yabai -m window --swap east && sketchybar --trigger windows_on_spaces

# resize
ctrl + alt - i : yabai -m window --resize left:100:0 || yabai -m window --resize left:100:0
ctrl + alt - e    : yabai -m window --resize top:-100:0 || yabai -m window --resize left:-100:0
ctrl + alt - n    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
ctrl + alt - h    : yabai -m window --resize right:0:-100 || yabai -m window --resize top:0:-100

# equalize size of windows
shift + alt - b : yabai -m space --balance
# toggle split orientation of the selected win
shift + alt - s : yabai -m window --toggle split
# float selected win
shift + alt - v : yabai -m window --toggle float
#mirror
shift + alt - m : yabai -m space --mirror y-axis
# enable / disable gaps in current workspace
ctrl + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# apps
alt - space : open -n /Applications/WezTerm.app
shift + alt - space : open -n /Applications/qutebrowser.app

# scripts
cmd + shift - space : yabr && sketchr
