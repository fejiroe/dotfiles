#!/usr/bin/env sh
#
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m rule --add app="qutebrowser" title!="^$" role="AXWindow" subrole="AXDialog" manage=on

yabai -m config \
	mouse_follows_focus off \
	focus_follows_mouse autofocus \
	window_origin_display default \
	window_placement second_child \
	window_zoom_persist off \
	window_shadow on \
	window_opacity on \
        window_animation_easing easeOutQuint \
	window_animation_duration 1.50 \
	insert_feedback_color 0xff5f5fd7 \
	split_ratio 0.50 \
	split_type auto \
	auto_balance off \
	top_padding 9 \
	bottom_padding 6 \
	left_padding 9 \
	right_padding 9 \
	window_gap 3 \
	layout bsp \
	mouse_modifier fn \
	mouse_action1 move \
	mouse_action2 resize \
	mouse_drop_action swap

echo "yabai configuration loaded.."
yabai -m rule --add --apply app="^(Max)$" manage=off
borders active_color=0xbbee2311 inactive_color=0x22888888 style=square width=3.0 blacklist="Safari,Zen,Ghostty,Finder,Music,Messages,System Setttings,Books, Xcode, Zed, Telegram" &
yabai -m signal --add label="flash_focus" event="window_focused" action="yabai -m window \$YABAI_WINDOW_ID --opacity 0.1 && sleep $(yabai -m config window_opacity_duration) && yabai -m window \$YABAI_WINDOW_ID --opacity 0.0"

