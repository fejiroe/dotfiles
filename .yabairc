#!/usr/bin/env sh
#
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config \
	menubar_opacity 0.0 \
	mouse_follows_focus off \
	focus_follows_mouse autofocus \
	window_origin_display default \
	window_placement second_child \
	window_zoom_persist off \
	window_shadow on \
	window_opacity on \
        window_animation_easing easeOutQuint \
	window_animation_duration 1.50 \
	insert_feedback_color 0xff5f5fd7 \
	split_ratio 0.50 \
	split_type auto \
	auto_balance off \
	top_padding 15 \
	bottom_padding 12 \
	left_padding 15 \
	right_padding 15 \
	window_gap 6 \
	layout bsp \
	mouse_modifier fn \
	mouse_action1 move \
	mouse_action2 resize \
	mouse_drop_action swap

#yabai -m rule --add app="^(System Settings|System Information|Activity Monitor|FaceTime|Screen Sharing|TinkerTool)$" manage=off
yabai -m rule --add --apply app="qutebrowser" title!="^$" role="AXWindow" subrole="AXDialog" manage=on

echo "yabai configuration loaded.."


